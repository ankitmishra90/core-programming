package Json;

import java.io.FileReader;
import java.io.PrintWriter;
import java.util.Iterator;
import java.util.LinkedHashMap;
import java.util.Map;

import org.json.simple.JSONObject;
import org.json.simple.parser.JSONParser;

public class InventoryDetails {
static void write() throws Exception
{
	JSONObject obj=new JSONObject();
	obj.put("Inventory", "Grain");
	Map details=new LinkedHashMap();
	details.put("Rice", 35.5+"kg");
	details.put("Pulses", 1000+"rs");
	details.put("Wheats", 50+"pkg");
	obj.put("Details", details);
	PrintWriter pw=new PrintWriter("AnkitFileName.json");
	pw.write(obj.toJSONString());
	pw.flush();
	pw.close();
}

static void read() throws Exception
{
	Object ob=new JSONParser().parse(new FileReader("AnkitFileName.json"));
	JSONObject obj=(JSONObject)ob;
	Map details=(Map)obj.get("Details");
	Iterator<Map.Entry> itr=details.entrySet().iterator();
	while(itr.hasNext())
	{
		Map.Entry pair=itr.next();
		System.out.println(pair.getKey()+":"+pair.getValue());
	}
}
public static void main(String[] ar) throws Exception
{
	write();
	read();
}
}
